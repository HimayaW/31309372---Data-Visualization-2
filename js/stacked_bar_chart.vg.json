{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Accepted Applicants",
    "data": {"url": "https://raw.githubusercontent.com/HimayaW/31309372---Data-Visualization-2/main/data/Asylum%20Decisions.csv"},
    "transform":[
        {
        "aggregate": [{
           "op": "sum",
           "field": "Total_accepted",
           "as": "Accepted Applicants"
        }],
        "groupby": ["Country_of_asylum"]
      },
        {
        "window": [{
          "op": "rank",
          "as": "rank"
        }],
        "sort": [{ "field": "Accepted Applicants", "order": "descending" }]
      }, {
        "filter": "datum.rank <= 10"
      }
    ],
    "mark":"bar",
    "encoding": {
      "x": {
        "field": "Country_of_asylum",
        "type": "nominal",
        "title": "Country of Asylum"
      },
      "y": {
          "field": "Accepted Applicants",
        "type": "quantitative",
        "title": "Total accepted applicants"
      },
      "tooltip": [
        {"field": "Country_of_asylum", "type": "nominal", "title": "Country of Asylum"},
        {"field": "Accepted Applicants", "type": "quantitative"}
      ]
    },
    "config": {}
  }